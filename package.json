{
  "name": "base-api",
  "version": "1.0.0",
  "description": "base api",
  "main": "index.js",
  "scripts": {
    "build": "npx concurrently \"npm run build:server\" ",
    "build:server": "rm -rf build && NODE_ENV=production npx backpack build",
    "dev": "npx backpack",
    "debug": "env DEBUG='api:*' & npm run dev",
    "debug:windows": "set DEBUG=api:* & npm run dev",
    "predev": "node bin/update-local-config.js 104z-local-env-config 104z-star-doc-api ./config",
    "start": "cross-env NODE_ENV=production nodemon build/main.js",
    "test": "env BABEL_ENV=test npx jest",
    "test:coverage": "npx rimraf report/coverage && env BABEL_ENV=test npx jest --coverage"
  },
  "author": "",
  "license": "",
  "devDependencies": {
    "babel-eslint": "8.2.5",
    "babel-jest": "^24.9.0",
    "eslint": "6.7.1",
    "eslint-config-airbnb-base": "14.0.0",
    "eslint-config-prettier": "6.7.0",
    "eslint-import-resolver-node": "0.3.2",
    "eslint-plugin-flowtype": "4.5.2",
    "eslint-plugin-import": "2.18.2",
    "eslint-plugin-jest": "23.0.4",
    "eslint-plugin-prettier": "3.1.1",
    "eslint-plugin-promise": "4.2.1",
    "jest-cli": "24.9.0",
    "prettier": "1.19.1",
    "prettier-eslint-cli": "5.0.0"
  },
  "dependencies": {
    "backpack-core": "^0.8.4",
    "body-parser": "1.19.0",
    "cluster": "0.7.7",
    "config": "3.2.4",
    "cors": "2.8.5",
    "debug": "4.1.1",
    "express": "4.17.1",
    "helmet": "3.21.2",
    "morgan": "^1.9.1",
    "morgan-json": "1.1.0",
    "winston": "3.0.0",
    "winston-daily-rotate-file": "3.3.0"
  }
}
