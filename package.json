{
  "name": "base-api",
  "version": "1.0.0",
  "description": "專案初始化",
  "main": "index.js",
  "scripts": {
    "build": "npx concurrently \"npm run build:server\" ",
    "build:server": "rm -rf build && NODE_ENV=production npx backpack build",
    "dev": "npx backpack",
    "debug": "env DEBUG='api:*'  npm run dev",
    "debug:windows": "set DEBUG=api:* & npm run dev",
    "lint": "npx rimraf report/eslint.html && npx eslint -c ./.eslintrc.js -f html -o report/eslint.html .",
    "localEnv": "node bin/update-local-config.js 104z-local-env-config 104z-resume-clinic-api/development.js ./config/development.js",
    "start": "cross-env NODE_ENV=production nodemon build/main.js",
    "test": "env BABEL_ENV=test npx jest",
    "test:coverage": "npx rimraf report/coverage && env BABEL_ENV=test npx jest --coverage"
  },
  "author": "104z",
  "license": "",
  "devDependencies": {
    "babel-eslint": "10.0.3",
    "babel-jest": "^26.1.0",
    "eslint": "^7.4.0",
    "eslint-config-prettier": "^6.7.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "husky": "^3.1.0",
    "jest-cli": "26.1.0",
    "lint-staged": "^9.5.0",
    "prettier": "2.0.5",
    "prettier-eslint-cli": "^5.0.0",
    "quick-lru": "4.0.1",
    "raw-loader": "4.0.0",
    "rimraf": "^3.0.0"
  },
  "dependencies": {
    "aws-sdk": "2.1125.0",
    "backpack-core": "^0.8.4",
    "base64url": "^3.0.1",
    "body-parser": "1.19.0",
    "change-case": "4.1.0",
    "cluster": "0.7.7",
    "config": "3.2.4",
    "cors": "2.8.5",
    "cross-env": "^6.0.3",
    "crypto": "^1.0.1",
    "debug": "4.1.1",
    "express": "4.17.1",
    "helmet": "3.21.2",
    "jwks-rsa": "^1.6.0",
    "knex": "^0.20.3",
    "map-obj": "4.1.0",
    "morgan": "^1.9.1",
    "morgan-json": "1.1.0",
    "mysql": "^2.17.1",
    "openid-client": "^3.8.4",
    "proxy-agent": "^4.0.1",
    "swagger-ui-express": "^4.1.4",
    "winston": "3.0.0",
    "winston-daily-rotate-file": "3.3.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
